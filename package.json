  "author": "Max GJ Panas <m@maxpanas.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Maximilianos/temperature/issues"
  },
  "homepage": "https://github.com/Maximilianos/temperature#readme",
